<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="600" prefWidth="800"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="game.arkanoid.controllers.SettingsController">

    <ImageView fx:id="backgroundImageView" fitHeight="600" fitWidth="800" preserveRatio="false">
        <image><Image url="@../images/GameSettings.png"/></image>
    </ImageView>

    <!-- SOUND BAR BELOW OPTIONS IN BACKGROUND -->
    <HBox spacing="25" alignment="CENTER"
          layoutY="165"
          prefWidth="800">
        <children>

            <!-- Toggle Sound Button -->
            <Button fx:id="soundButton"
                    onAction="#toggleSound"
                    prefWidth="50" prefHeight="50"
                    style="-fx-background-color: transparent;">
                <graphic>
                    <ImageView fx:id="soundToggleImage" fitWidth="45" fitHeight="45" preserveRatio="true"/>
                </graphic>
            </Button>

            <!-- Volume Slider -->
            <Slider fx:id="volumeSlider"
                    prefWidth="350"
                    min="0" max="1" value="0.5"
                    styleClass="neon-slider"/>
        </children>
    </HBox>


    <!-- Paddle Section -->
    <Button fx:id="leftPaddleButton" layoutX="74" layoutY="318"
            onAction="#prevPaddle" onMouseEntered="#onButtonMouseEntered" onMouseExited="#onButtonMouseExited"
            prefHeight="40" prefWidth="40"
            style="-fx-background-color: transparent;">
        <graphic>
            <ImageView fx:id="leftPaddleImageView" fitHeight="40" fitWidth="40">
                <image><Image url="@../images/left.png"/></image>
            </ImageView>
        </graphic>
    </Button>

    <ImageView fx:id="paddleImageView" fitHeight="70" fitWidth="180"
               layoutX="154" layoutY="307" preserveRatio="true">
        <image><Image url="@../images/Paddle.png"/></image>
    </ImageView>

    <Button fx:id="rightPaddleButton" layoutX="346" layoutY="318"
            onAction="#nextPaddle" onMouseEntered="#onButtonMouseEntered" onMouseExited="#onButtonMouseExited"
            prefHeight="40" prefWidth="40"
            style="-fx-background-color: transparent;">
        <graphic>
            <ImageView fx:id="rightPaddleImageView" fitHeight="40" fitWidth="40">
                <image><Image url="@../images/right.png"/></image>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="confirmPaddleButton" layoutX="176" layoutY="410"
            onAction="#confirmPaddle" onMouseEntered="#onButtonMouseEntered" onMouseExited="#onButtonMouseExited"
            prefHeight="40" prefWidth="120"
            style="-fx-background-color: transparent;">
        <graphic>
            <ImageView fx:id="confirmPaddleImageView" fitHeight="40" fitWidth="120">
                <image><Image url="@../images/change.png"/></image>
            </ImageView>
        </graphic>
    </Button>


    <!-- Ball Section -->
    <Button fx:id="leftBallButton" layoutX="472" layoutY="318"
            onAction="#prevBall" onMouseEntered="#onButtonMouseEntered" onMouseExited="#onButtonMouseExited"
            prefHeight="40" prefWidth="40"
            style="-fx-background-color: transparent;">
        <graphic>
            <ImageView fx:id="leftBallImageView" fitHeight="40" fitWidth="40">
                <image><Image url="@../images/left.png"/></image>
            </ImageView>
        </graphic>
    </Button>

    <ImageView fx:id="ballImageView" fitHeight="70" fitWidth="70"
               layoutX="558" layoutY="307" preserveRatio="true">
        <image><Image url="@../images/Ball.png"/></image>
    </ImageView>

    <Button fx:id="rightBallButton" layoutX="656" layoutY="318"
            onAction="#nextBall" onMouseEntered="#onButtonMouseEntered" onMouseExited="#onButtonMouseExited"
            prefHeight="40" prefWidth="40"
            style="-fx-background-color: transparent;">
        <graphic>
            <ImageView fx:id="rightBallImageView" fitHeight="40" fitWidth="40">
                <image><Image url="@../images/right.png"/></image>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="confirmBallButton" layoutX="532" layoutY="410"
            onAction="#confirmBall" onMouseEntered="#onButtonMouseEntered" onMouseExited="#onButtonMouseExited"
            prefHeight="40" prefWidth="120"
            style="-fx-background-color: transparent;">
        <graphic>
            <ImageView fx:id="confirmBallImageView" fitHeight="40" fitWidth="120">
                <image><Image url="@../images/change.png"/></image>
            </ImageView>
        </graphic>
    </Button>


    <!-- Save Button -->
    <Button fx:id="saveButton" layoutX="334" layoutY="510"
            onAction="#saveSettings" onMouseEntered="#onButtonMouseEntered" onMouseExited="#onButtonMouseExited"
            prefHeight="50" prefWidth="120"
            style="-fx-background-color: transparent;">
        <graphic>
            <ImageView fx:id="saveImageView" fitHeight="50" fitWidth="120">
                <image><Image url="@../images/save.png"/></image>
            </ImageView>
        </graphic>
    </Button>

</AnchorPane>
