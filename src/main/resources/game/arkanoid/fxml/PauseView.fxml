<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>

<AnchorPane prefHeight="300" prefWidth="400"
            style="-fx-background-color: transparent;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="game.arkanoid.controllers.PauseController">

    <ImageView fx:id="backgroundImage" fitHeight="300" fitWidth="400"
               preserveRatio="false" opacity="0.6">

        <image>
            <Image url="@../images/PauseBG.png"/>
        </image>
        <effect>
            <DropShadow radius="15" color="#00000066"/>
        </effect>
    </ImageView>

    <Button fx:id="resumeButton" layoutX="129.0" layoutY="203.0"
            onAction="#handleResume"
            onMouseEntered="#onResumeMouseEntered"
            onMouseExited="#onResumeMouseExited"
            prefHeight="50.0" prefWidth="120.0"
            style="-fx-background-color: transparent;">
        <graphic>
            <ImageView fx:id="resumeImageView" fitHeight="50.0" fitWidth="120.0" preserveRatio="false">
                <image>
                    <Image url="@../images/resume.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="resetButton" layoutX="32.0" layoutY="68.0"
            onAction="#handleRestart"
            prefHeight="90" prefWidth="90"
            style="-fx-background-color: transparent;">
        <graphic>
            <ImageView fitHeight="90" fitWidth="90" preserveRatio="false">
                <image>
                    <Image url="@../images/resetCurrentLv.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="backToMainButton" layoutX="144.0" layoutY="68.0"
            onAction="#handleMainMenu"
            prefHeight="90" prefWidth="90"
            style="-fx-background-color: transparent;">
        <graphic>
            <ImageView fitHeight="90" fitWidth="90" preserveRatio="false">
                <image>
                    <Image url="@../images/backToMain.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="settingsButton" layoutX="256.0" layoutY="67.0"
            onAction="#handleSettings"
            prefHeight="90" prefWidth="90"
            style="-fx-background-color: transparent;">
        <graphic>
            <ImageView fitHeight="90" fitWidth="90" preserveRatio="false">
                <image>
                    <Image url="@../images/settingsbut.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>

</AnchorPane>
