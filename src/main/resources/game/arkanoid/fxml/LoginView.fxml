<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/17"
           fx:controller="game.arkanoid.player_manager.LoginController"
           prefWidth="800" prefHeight="600">

    <ImageView fitHeight="600" fitWidth="800" preserveRatio="false">
        <image>
            <Image url="@../images/LoginView.png" />
        </image>
    </ImageView>

    <VBox alignment="CENTER" spacing="0" prefWidth="800" prefHeight="600"
          style="-fx-padding: 70 0 0 0;">

        <Region VBox.vgrow="ALWAYS"/>

        <StackPane alignment="CENTER">
            <VBox alignment="CENTER" spacing="7"
                  prefWidth="330" maxWidth="330"
                  prefHeight="360" maxHeight="360"
                  style="-fx-background-color: rgba(0,0,0,0.65);
                         -fx-background-radius: 15;
                         -fx-border-color: #00bfff;
                         -fx-border-width: 2;
                         -fx-border-radius: 15;
                         -fx-padding: 20;">

                <Label fx:id="titleLabel"
                       text="LOGIN"
                       style="-fx-font-size: 26; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, #00bfff, 10, 0.8, 0, 0);"/>

                <Label fx:id="messageLabel" text="" style="-fx-text-fill: red;"/>

                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="Username:" style="-fx-text-fill: white; -fx-font-size: 13;"/>

                    <HBox spacing="5" alignment="CENTER_LEFT" prefWidth="260">
                        <TextField fx:id="usernameField"
                                   promptText="Enter username"
                                   HBox.hgrow="ALWAYS"
                                   style="-fx-background-color: rgba(255,255,255,0.1);
                          -fx-background-radius: 8;
                          -fx-text-fill: white;
                          -fx-prompt-text-fill: gray;"/>

                        <Label fx:id="usernameStatus" text="" style="-fx-font-size: 20;"/>
                    </HBox>

                    <Label fx:id="usernameHint" text="" style="-fx-font-size: 11;"/>
                </VBox>

                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="Password:" style="-fx-text-fill: white; -fx-font-size: 13;"/>

                    <PasswordField fx:id="passwordField"
                                   promptText="Enter password"
                                   prefWidth="200"
                                   style="-fx-background-color: rgba(255,255,255,0.1);
                                          -fx-background-radius: 8;
                                          -fx-text-fill: white;
                                          -fx-prompt-text-fill: gray;"/>

                    <TextField fx:id="passwordFieldVisible"
                               promptText="Enter password"
                               prefWidth="200"
                               visible="false"
                               managed="false"
                               style="-fx-background-color: rgba(255,255,255,0.1);
                                      -fx-background-radius: 8;
                                      -fx-text-fill: white;
                                      -fx-prompt-text-fill: gray;"/>
                </VBox>

                <VBox fx:id="confirmBox" alignment="CENTER_LEFT" spacing="5"
                      visible="false" managed="false">

                    <Label text="Confirm Password:" style="-fx-text-fill: white; -fx-font-size: 13;"/>

                    <PasswordField fx:id="confirmPasswordField"
                                   promptText="Confirm password"
                                   prefWidth="200"
                                   style="-fx-background-color: rgba(255,255,255,0.1);
                                          -fx-background-radius: 8;
                                          -fx-text-fill: white;
                                          -fx-prompt-text-fill: gray;"/>

                    <TextField fx:id="confirmPasswordFieldVisible"
                               promptText="Confirm password"
                               prefWidth="200"
                               visible="false"
                               managed="false"
                               style="-fx-background-color: rgba(255,255,255,0.1);
                                      -fx-background-radius: 8;
                                      -fx-text-fill: white;
                                      -fx-prompt-text-fill: gray;"/>
                </VBox>

                <HBox alignment="CENTER_RIGHT" prefWidth="260">
                    <CheckBox fx:id="showPasswordCheck"
                              text="Show password"
                              textFill="white"
                              onAction="#togglePassword"/>
                </HBox>

                <HBox spacing="20" alignment="CENTER">
                    <Button fx:id="mainButton"
                            text="Login"
                            onAction="#handleLoginOrRegister"
                            prefWidth="130" prefHeight="32"
                            style=" -fx-background-color: linear-gradient(to bottom, #00ccff, #0088cc);
                                    -fx-background-radius: 10;
                                    -fx-text-fill: white;
                                    -fx-font-weight: bold;
                                    -fx-effect: dropshadow(gaussian, #00ccff, 15, 0.3, 0, 0);;"/>

                    <Button fx:id="switchButton"
                            text="Register"
                            onAction="#switchMode"
                            prefWidth="130" prefHeight="32"
                            style="-fx-background-color: transparent;
                                   -fx-border-color: #00bfff;
                                   -fx-border-width: 2;
                                   -fx-border-radius: 8;
                                   -fx-text-fill: white;"/>
                </HBox>

            </VBox>
        </StackPane>

        <Region VBox.vgrow="ALWAYS"/>
    </VBox>

</StackPane>
