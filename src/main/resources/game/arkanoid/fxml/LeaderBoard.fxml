<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="game.arkanoid.player_manager.LeaderboardController"
           prefWidth="900" prefHeight="650"
           stylesheets="@../styles/leaderboard.css"
           style="-fx-background-color: linear-gradient(to bottom, #0f2027, #203a43, #2c5364);">

    <!-- Background -->
    <ImageView fitWidth="900" fitHeight="650" opacity="0.25" preserveRatio="false">
        <image>
            <Image url="@../images/leaderBoardBackground.png" />
        </image>
    </ImageView>

    <!-- Main layout -->
    <VBox alignment="TOP_CENTER" spacing="30">
        <padding>
            <Insets top="70" right="30" bottom="30" left="30"/>
        </padding>

        <!-- Title -->
        <Label text="ðŸ† LEADERBOARD ðŸ†"
               style="-fx-font-size: 42px;
                      -fx-text-fill: linear-gradient(to bottom, #00ffff, #0099ff);
                      -fx-font-weight: bold;
                      -fx-effect: dropshadow(gaussian, rgba(0,255,255,0.8), 18, 0, 0, 0);" />

        <!-- Top 3 -->
        <VBox fx:id="top3Box" alignment="CENTER" spacing="20"
              prefWidth="700"
              style="-fx-background-color: rgba(0, 0, 0, 0.55);
                     -fx-background-radius: 25;
                     -fx-border-color: #00eaff;
                     -fx-border-width: 2.5;
                     -fx-border-radius: 25;
                     -fx-padding: 30 40 30 40;
                     -fx-effect: dropshadow(gaussian, rgba(0,255,255,0.5), 18, 0, 0, 0);">

            <Label text="TOP 3 PLAYERS"
                   style="-fx-font-size: 30px;
                          -fx-text-fill: #ffd700;
                          -fx-font-weight: bold;" />

            <HBox alignment="CENTER" spacing="12">
                <ImageView fx:id="cup1" fitWidth="38" fitHeight="38">
                    <image><Image url="@../images/gold_cup.png" /></image>
                </ImageView>
                <Label fx:id="rank1Label"
                       text="1. PLAYER_ONE - 9999"
                       style="-fx-text-fill: gold;
                              -fx-font-size: 26px;
                              -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(255,215,0,0.6), 8, 0, 0, 0);" />
            </HBox>

            <HBox alignment="CENTER" spacing="12">
                <ImageView fx:id="cup2" fitWidth="36" fitHeight="36">
                    <image><Image url="@../images/silver_cup.png" /></image>
                </ImageView>
                <Label fx:id="rank2Label"
                       text="2. PLAYER_TWO - 8500"
                       style="-fx-text-fill: silver;
                              -fx-font-size: 24px;
                              -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(192,192,192,0.6), 8, 0, 0, 0);" />
            </HBox>

            <HBox alignment="CENTER" spacing="12">
                <ImageView fx:id="cup3" fitWidth="34" fitHeight="34">
                    <image><Image url="@../images/bronze_cup.png" /></image>
                </ImageView>
                <Label fx:id="rank3Label"
                       text="3. PLAYER_THREE - 7200"
                       style="-fx-text-fill: #cd7f32;
                              -fx-font-size: 24px;
                              -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(205,127,50,0.6), 8, 0, 0, 0);" />
            </HBox>
        </VBox>

        <!-- Your high score -->
        <HBox fx:id="yourHighBox" alignment="CENTER" spacing="10"
              maxWidth="400"
              style="-fx-background-color: rgba(0, 0, 0, 0.5);
                     -fx-background-radius: 14;
                     -fx-border-color: #00eaff;
                     -fx-border-width: 2;
                     -fx-border-radius: 14;
                     -fx-padding: 12 22 12 22;
                     -fx-effect: dropshadow(gaussian, rgba(0,255,255,0.4), 10, 0, 0, 0);">
            <Label fx:id="playerHighScoreLabel"
                   text="Your Best: 6800"
                   style="-fx-font-size: 22px;
                          -fx-text-fill: white;
                          -fx-font-weight: bold;
                          -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.6), 8, 0, 0, 0);" />
            <ImageView fx:id="yourCupImage" fitWidth="28" fitHeight="28" visible="true">
                <image><Image url="@../images/mini_cup.png" /></image>
            </ImageView>
        </HBox>

        <!-- Back to menu box giá»‘ng your high score -->
        <HBox alignment="CENTER" spacing="10"
              maxWidth="150"
              style="-fx-background-color: rgba(0, 0, 0, 0.5);
                     -fx-background-radius: 14;
                     -fx-border-color: #00eaff;
                     -fx-border-width: 2;
                     -fx-border-radius: 14;
                     -fx-padding: 8 16 8 16;
                     -fx-effect: dropshadow(gaussian, rgba(0,255,255,0.4), 10, 0, 0, 0);">
            <Button text="BACK"
                    fx:id="backButton"
                    onAction="#backToMenu"
                    prefWidth="220" prefHeight="40"
                    style="-fx-font-size: 20px;
                           -fx-text-fill: white;
                           -fx-background-color: transparent;
                           -fx-font-weight: bold;
                           -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.6), 8, 0, 0, 0);" />
        </HBox>

    </VBox>
</StackPane>
