<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="root"
           xmlns="http://javafx.com/javafx/11.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="game.arkanoid.controllers.StartMenuController"
           prefWidth="800" prefHeight="600"
           style="-fx-background-color: black;">

    <VBox alignment="CENTER" spacing="30">
        <Label text="ARKANOID"
               style="-fx-font-size: 48; -fx-font-weight: bold; -fx-text-fill: red;"/>

        <VBox alignment="CENTER" spacing="15">
            <Button fx:id="startButton" text="START GAME" onAction="#startGame"
                    style="-fx-font-size: 18; -fx-pref-width: 200;"/>
            <Button fx:id="settingsButton" text="SETTINGS" onAction="#openSettings"
                    style="-fx-font-size: 18; -fx-pref-width: 200;"/>
            <Button fx:id="exitButton" text="EXIT" onAction="#exitGame"
                    style="-fx-font-size: 18; -fx-pref-width: 200;"/>
        </VBox>
    </VBox>
</StackPane>
