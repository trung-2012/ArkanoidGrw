<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="game.arkanoid.controllers.MainController">

    <!-- Ảnh nền -->
    <ImageView fx:id="backgroundImageView" fitHeight="600" fitWidth="800" mouseTransparent="true" pickOnBounds="false"
               preserveRatio="false">
        <image>
            <Image url="@../images/BackGround.png"/>
        </image>
    </ImageView>

    <!-- Bố cục chính -->
    <BorderPane prefHeight="600" prefWidth="800">

        <!-- Thanh trên -->
        <top>
            <HBox fx:id="topBar" alignment="CENTER" spacing="30"
                  style="-fx-padding: 10; -fx-background-color: #2c3e50aa;">
                <Label fx:id="levelLabel" style="-fx-text-fill: white; -fx-font-size: 16;" text="Level: 1"/>
                <Label fx:id="scoreLabel" style="-fx-text-fill: white; -fx-font-size: 16;" text="Score: 0"/>
                <Label fx:id="livesLabel" style="-fx-text-fill: white; -fx-font-size: 16;" text="Lives: 3"/>
            </HBox>
        </top>

        <!-- Vùng game -->
        <center>
            <Canvas fx:id="gameCanvas"/>
        </center>

        <!-- Thanh dưới -->
        <bottom>
            <HBox fx:id="bottomBar" alignment="CENTER" spacing="25"
                  style="-fx-padding: 10; -fx-background-color: #2c3e50aa;">

                <!-- Nút START -->
                <Button fx:id="startButton" onAction="#startGame" onMouseEntered="#onButtonMouseEntered"
                        onMouseExited="#onButtonMouseExited" prefHeight="40.0" prefWidth="80.0"
                        style="-fx-background-color: transparent;" text="">
                    <graphic>
                        <ImageView fx:id="startImageView" fitHeight="40.0" fitWidth="80.0" preserveRatio="false">
                            <image>
                                <Image url="@../images/start.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Nút PAUSE -->
                <Button fx:id="pauseButton" onAction="#pauseGame" onMouseEntered="#onButtonMouseEntered"
                        onMouseExited="#onButtonMouseExited" prefHeight="40.0" prefWidth="80.0"
                        style="-fx-background-color: transparent;" text="">
                    <graphic>
                        <ImageView fx:id="pauseImageView" fitHeight="40.0" fitWidth="80.0" preserveRatio="false">
                            <image>
                                <Image url="@../images/pause.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Nút RESET -->
                <Button fx:id="resetButton" onAction="#resetGame" onMouseEntered="#onButtonMouseEntered"
                        onMouseExited="#onButtonMouseExited" prefHeight="40.0" prefWidth="80.0"
                        style="-fx-background-color: transparent;" text="">
                    <graphic>
                        <ImageView fx:id="resetImageView" fitHeight="40.0" fitWidth="80.0" preserveRatio="false">
                            <image>
                                <Image url="@../images/reset.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Nút MAIN MENU -->
                <Button fx:id="menuButton" onAction="#returnToMenu" onMouseEntered="#onButtonMouseEntered"
                        onMouseExited="#onButtonMouseExited" prefHeight="40.0" prefWidth="80.0"
                        style="-fx-background-color: transparent;" text="">
                    <graphic>
                        <ImageView fx:id="menuImageView" fitHeight="40.0" fitWidth="80.0" preserveRatio="false">
                            <image>
                                <Image url="@../images/MainMenu.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

            </HBox>
        </bottom>
    </BorderPane>
</StackPane>