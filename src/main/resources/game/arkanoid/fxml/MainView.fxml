<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootStack" prefHeight="600"
           prefWidth="800"
           xmlns="http://javafx.com/javafx/17"
           fx:controller="game.arkanoid.controllers.MainController">

    <ImageView fx:id="backgroundImageView"
               fitHeight="600" fitWidth="800"
               preserveRatio="false" mouseTransparent="true">
        <image>
            <Image url="@../images/BackGround.png"/>
        </image>
    </ImageView>

    <BorderPane fx:id="mainGamePane">

        <top>
            <HBox fx:id="topBar" alignment="CENTER" spacing="25"
                  style="-fx-padding: 10; -fx-background-color: #2c3e50aa;">

                <Label fx:id="playerNameLabel"
                       style="-fx-text-fill: white;
                              -fx-font-size: 17;
                              -fx-font-style: italic;
                              -fx-font-weight: bold;"
                       text="Player: ???"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label fx:id="levelLabel"
                       style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"
                       text="Level: 1"/>

                <Label fx:id="scoreLabel"
                       style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"
                       text="Score: 0"/>

                <Label fx:id="livesLabel"
                       style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"
                       text="Lives: 3"/>

            </HBox>
        </top>

        <center>
            <Canvas fx:id="gameCanvas"/>
        </center>

        <bottom>
            <HBox fx:id="bottomBar" alignment="CENTER" spacing="25"
                  style="-fx-padding: 10; -fx-background-color: #2c3e50aa;">

                <Button fx:id="pauseButton"
                        onAction="#pauseGame"
                        onMouseEntered="#onButtonMouseEntered"
                        onMouseExited="#onButtonMouseExited"
                        style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fx:id="pauseImageView"
                                   fitHeight="40" fitWidth="80"
                                   preserveRatio="false">
                            <image>
                                <Image url="@../images/pause.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

            </HBox>
        </bottom>

    </BorderPane>

    <Rectangle fx:id="pauseOverlay"
               width="800" height="600"
               fill="rgba(0,0,0,0.4)"
               visible="false"/>

</StackPane>
