<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/17"
           fx:controller="game.arkanoid.controllers.NicknameController"
           prefWidth="800" prefHeight="600"
           style="-fx-background-image: url('/game/arkanoid/images/LoginView.png');
                  -fx-background-size: 100% 100%;
                  -fx-background-position: center;">

    <VBox alignment="CENTER" spacing="0" prefWidth="800" prefHeight="600"
          style="-fx-padding: 70 0 0 0;">

        <Region VBox.vgrow="ALWAYS"/>

        <StackPane alignment="CENTER">
            <VBox alignment="CENTER" spacing="12"
                  prefWidth="330" maxWidth="330"
                  prefHeight="180" maxHeight="180"
                  style="-fx-background-color: rgba(0,0,0,0.65);
                         -fx-background-radius: 15;
                         -fx-border-color: #00bfff;
                         -fx-border-width: 2;
                         -fx-border-radius: 15;
                         -fx-padding: 20;">

                <!-- TITLE -->
                <Label text="NICKNAME"
                       style="-fx-font-size: 26;
                              -fx-text-fill: white;
                              -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, #00bfff, 10, 0.8, 0, 0);"/>

                <!-- MESSAGE -->
                <Label fx:id="messageLabel" text=""
                       style="-fx-text-fill: red;"/>

                <!-- NICKNAME FIELD -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="Enter nickname:"
                           style="-fx-text-fill: white; -fx-font-size: 13;"/>

                    <TextField fx:id="nicknameField"
                               promptText="Max 12 characters"
                               prefWidth="260"
                               style="-fx-background-color: rgba(255,255,255,0.1);
                                      -fx-background-radius: 8;
                                      -fx-text-fill: white;
                                      -fx-prompt-text-fill: gray;"/>
                </VBox>

                <!-- BUTTON -->
                <Button text="Continue"
                        onAction="#handleContinue"
                        prefWidth="130" prefHeight="32"
                        style="-fx-background-color: linear-gradient(to bottom, #00ccff, #0088cc);
                               -fx-background-radius: 10;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-effect: dropshadow(gaussian, #00ccff, 15, 0.3, 0, 0);"/>
            </VBox>
        </StackPane>

        <Region VBox.vgrow="ALWAYS"/>
    </VBox>

</StackPane>
