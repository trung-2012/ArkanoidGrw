<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>

<AnchorPane fx:controller="game.arkanoid.SkinSelectController"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="800" prefHeight="600">

    <!-- NỀN -->
    <AnchorPane style="-fx-background-color: linear-gradient(to bottom, #000000, #222222);"
                prefWidth="800" prefHeight="600" />

    <!-- TIÊU ĐỀ -->
    <Label text="CHỌN SKIN" layoutX="330" layoutY="30"
           style="-fx-font-size: 24px; -fx-text-fill: white;" />

    <!-- ẢNH HIỂN THỊ SKIN -->
    <ImageView fx:id="previewImage" fitWidth="150" fitHeight="150" layoutX="325" layoutY="200"/>

    <!-- NÚT ĐIỀU KHIỂN -->
    <Button text="&lt;" fx:id="prevBtn" layoutX="250" layoutY="230" prefWidth="50" />
    <Button text="&gt;" fx:id="nextBtn" layoutX="520" layoutY="230" prefWidth="50" />
    <Button text="Chọn" fx:id="selectBtn" layoutX="360" layoutY="400" prefWidth="80" />
    <Button text="Quay lại" fx:id="backBtn" layoutX="20" layoutY="550" prefWidth="100" />

</AnchorPane>
