<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: black;"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/25"
            fx:controller="game.arkanoid.MenuControll">

    <!-- Nền hiệu ứng sao -->
    <Canvas fx:id="starCanvas" height="600" width="800" />

    <!-- Nút START GAME -->
    <Button layoutX="330" layoutY="230" onAction="#onStartGame" prefHeight="40" prefWidth="140"
            style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="START GAME">
        <font><Font size="18" /></font>
    </Button>

    <!-- Nút CHỌN SKIN -->
    <Button layoutX="330" layoutY="280" onAction="#onChooseSkin" prefHeight="40" prefWidth="140"
            style="-fx-background-color: #3498db; -fx-text-fill: white;" text="CHỌN SKIN">
        <font><Font size="18" /></font>
    </Button>

    <!-- Nút EXIT -->
    <Button layoutX="330" layoutY="330" onAction="#onExit" prefHeight="40" prefWidth="140"
            style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="EXIT">
        <font><Font size="18" /></font>
    </Button>

    <!-- Preview ảnh ball & paddle -->
    <ImageView fx:id="ballPreview" fitHeight="50" fitWidth="50" layoutX="250" layoutY="420" />
    <ImageView fx:id="paddlePreview" fitHeight="20" fitWidth="100" layoutX="400" layoutY="435" />

</AnchorPane>
