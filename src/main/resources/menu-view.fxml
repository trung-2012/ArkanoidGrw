<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="game.arkanoid.MenuControll"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: black;">

    <children>
        <!-- Canvas để vẽ sao -->
        <Canvas fx:id="starCanvas" width="800" height="600"/>

        <!-- VBox đặt nút và label ở giữa -->
        <VBox alignment="CENTER" spacing="20"
              AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

            <Label text="ARKANOID GAME"
                   style="-fx-font-size: 36px; -fx-text-fill: white;"/>

            <Button fx:id="startButton" text="Start Game"
                    onAction="#onStartGame" prefWidth="200"/>

            <Button fx:id="exitButton" text="Exit"
                    onAction="#onExit" prefWidth="200"/>
        </VBox>
    </children>
</AnchorPane>
